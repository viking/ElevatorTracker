<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.pillageandplunder.elevatortracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.pillageandplunder.elevatortracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.pillageandplunder.elevatortracker.ElevatorRide"
            android:label="@string/title_activity_elevator_ride"
            android:parentActivityName="net.pillageandplunder.elevatortracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.pillageandplunder.elevatortracker.MainActivity" />
        </activity>
        <activity
            android:name="net.pillageandplunder.elevatortracker.ViewData"
            android:label="@string/title_activity_view_data"
            android:parentActivityName="net.pillageandplunder.elevatortracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.pillageandplunder.elevatortracker.MainActivity" />
        </activity>
    </application>

</manifest>